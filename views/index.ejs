<!DOCTYPE html>
<html lang="en">
    <%- include('layouts/header'); %>
    <body>
        <%- include('layouts/navbar'); %>
        <!-- Page Header-->
        <header class="masthead" style="background-image: url('assets/img/home.png')">
            <div class="container position-relative px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="site-heading">
                            <h1>Devops Blog</h1>
                            <span class="subheading">Learning Devops From Zero</span>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- Main Content-->
        <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <!-- Post preview-->
                      <!-- Lấy dữ liệu từ biến được truyefn từ index.js sang-->
                     <% for (var i = 0; i < blogposts.length; i++) { %>
                    <div class="post-preview">
                        <a href="/post/<%= blogposts[i]._id %>">
                            <h2 class="post-title">
                                <%= blogposts[i].title %>
                            </h2>
                            <h3 class="post-subtitle">
                                <%= blogposts[i].body %>
                            </h3>
                        </a>
                        <p class="post-meta">
                            Posted by
                            <!-- Tác giả + ngày đăng từ db-->
                            <a href="#"><%= blogposts[i].username %></a>
                            on <%= blogposts[i].datePosted.toDateString() %>
                        </p>
                    </div>
                    <% } %>
                    <!-- Divider-->
                    <hr class="my-4" />
                    <!-- Pager-->
                    <div class="d-flex justify-content-end mb-4"><a class="btn btn-primary text-uppercase" href="#!">Older Posts →</a></div>
                </div>
            </div>
        </div>
        <!-- Footer-->
        <%- include('layouts/footer'); %>
        <%- include('layouts/scripts'); %>
    </body>
</html>
